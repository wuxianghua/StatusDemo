<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.org.statusdemo.MainActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="#32B9AA"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.mapbox.mapboxsdk.maps.MapView
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.mapbox.mapboxsdk.maps.MapView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="#9932B9AA">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back"/>
            <LinearLayout
                android:id="@+id/set_start_point"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="#32B9AA"
                android:padding="7dp"
                android:layout_height="37dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:text="起"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="@android:color/white"
                    android:text="取药窗口1-3"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/end_point_two"
                android:layout_below="@+id/set_start_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginLeft="47dp"
                android:textColor="@android:color/white"
                android:text="终"/>
            <TextView
                android:layout_below="@+id/set_start_point"
                android:layout_toRightOf="@+id/end_point_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/white"
                android:text="取药窗口1-3"/>
        </RelativeLayout>
        <android.support.v7.widget.Toolbar
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#32B9AA"
            android:gravity="center_vertical"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_back"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:text="室内地图"/>
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:onClick="search"
            android:visibility="gone"
            android:background="@drawable/bg_search_input"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_search"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="16dp"
                android:text="请输入目的地"/>
        </LinearLayout>

        <!--图标过滤-->
        <ImageView
            android:id="@+id/iconCommon_image"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/shape_cornor"
            android:onClick="onClick"
            android:src="@mipmap/btn_map_sheshi_nor"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/iconCommon_image"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/bg_gonggongsheshi"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/xishoujian_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/ic_map_xishoujian"
                android:onClick="onClick"/>

            <ImageView
                android:id="@+id/yinhang_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/ic_map_yinhang"
                android:onClick="onClick"/>

            <ImageView
                android:id="@+id/dianti_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/ic_map_dianti"
                android:onClick="onClick"/>

            <ImageView
                android:id="@+id/futi_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@mipmap/ic_map_futi"
                android:onClick="onClick"/>
        </LinearLayout>

        <TextView
            android:id="@+id/floor_switch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="F1"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/bg_search_input"
            android:layout_above="@+id/end_point_info"/>

        <LinearLayout
            android:id="@+id/end_point_info"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_search_input">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="66dp">
                <TextView
                    android:id="@+id/end_point"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:textSize="15dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="#ff7338"
                    android:text="终"/>
                <TextView
                    android:id="@+id/feature_name"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/end_point"
                    android:text="输液室"/>
                <TextView
                    android:id="@+id/category_name"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/end_point"
                    android:layout_height="wrap_content"
                    android:text="第一住院大楼"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="15dp"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/category_name"
                    android:text="F3"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/ic_go"
                    android:layout_toLeftOf="@+id/go_here"/>
                <TextView
                    android:id="@+id/go_here"
                    android:layout_width="wrap_content"
                    android:text="去这里"
                    android:textSize="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:textColor="#32B9AA"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:background="#dddddd"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:textSize="15dp"
                android:gravity="center"
                android:text="发送位置给好友"
                android:textColor="#32B9AA" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
